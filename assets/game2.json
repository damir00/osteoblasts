{
	"segments": [
		{
			"start": 1000,
			"end": 20000,
			"waves": [
				{
					//wave 1, easy shooters (low hp)
					"start": 1000,
					"groups": ["shooters"],
					"pattern":"random",
					"ship_count":{"low":5,"high":10},
					"mult_enemy_speed":1,
					"mult_enemy_hp":{"low":0.1,"high":0.2},
					"spawn_delay":{"low":1000,"high":2000,"locked":false}
				},
				{
					//wave 2, fast spawning kamikaze
					"start": 10000,
					"groups": ["kamikaze"],
					"pattern":"random",
					"ship_count":7,
					"mult_enemy_speed":2,
					"mult_enemy_hp":{"low":0.1,"high":0.5},
					"mult_enemy_damage":3,
					"mult_enemy_fire_speed":1,
					"spawn_delay":100
				},
				{
					//wave that starts at 15s, spawns random ships almost indefinitely every 500-3000ms
					"start": 15000,
					"pattern":"random",
					"ship_count":10000,
					"spawn_delay":{"low":500,"high":3000,"locked":false}
				},
				{
					//spawn a single ship (whale) at second 20 with inflated HP - useful for spawning bosses
					"start":20000,
					"ship_count":1,
					"spawn_delay":0,
					"ships": ["whale"],
					"mult_enemy_hp": 10
				}
			]
		}
	]
}

